{
  "manifest_version": 3,
  "name": "Screen Time Monitor",
  "version": "1.0.0",
  "description": "Monitor and manage your screen time with detailed insights and controls",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "notifications",
    "idle"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["blocked/blocked.html", "blocked/blocked.css", "blocked/blocked.js", "icons/*"],
    "matches": ["<all_urls>"]
  }]
}