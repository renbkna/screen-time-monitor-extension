{
  "name": "screen-time-monitor-extension",
  "version": "1.0.0",
  "description": "A Chrome extension for monitoring and managing screen time with features like time tracking, website blocking, and focus mode.",
  "scripts": {
    "dev": "webpack --config webpack.dev.js --watch",
    "build": "webpack --config webpack.prod.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.{js,css,html}'",
    "analyze": "webpack --config webpack.prod.js --analyze",
    "clean": "rimraf dist coverage",
    "security": "npm audit && snyk test",
    "zip": "node scripts/zip.js"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-transform-runtime": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/runtime": "^7.23.6",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "snyk": "^1.1247.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-chrome"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/tests/mocks/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/renbkna/screen-time-monitor-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "screen-time",
    "productivity",
    "focus-mode",
    "time-tracking"
  ],
  "author": "renbkna",
  "license": "MIT"
}